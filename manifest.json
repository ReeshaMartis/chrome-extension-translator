{
  "manifest_version": 3,
  "name": "Quick Translate Extension",
  "version": "1.0",
  "description": "Translate text on web pages and save it to a board.",
  "permissions": ["activeTab", "scripting"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ]
